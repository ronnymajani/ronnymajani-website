---
const skills = [
  "Back-end Development", "Full-stack Development", "Embedded Software", "Operations",
  "Engineering Management", "Project Management", "Python", "Typescript", "Node",
  "React Native", "Expo", "Fastify", "Zod", "Zustand", "PostgreSQL",
  "Software Security", "Leadership", "Agile", "Documentation", "Accounting",
  "Feasibility Studies", "Product Management", "OpenAI", "LLM"
];

const roles = [
  {
    role: "Managing Director",
    company: "Neoma Group",
    period: "Oct 2024 - Nov 2025"
  },
  {
    role: "Head of Software",
    company: "Fraim",
    period: "Nov 2022 - Aug 2024"
  },
  {
    role: "Software Engineer",
    company: "Microsoft",
    period: "Apr 2022 - Apr 2023"
  },
  {
    role: "Senior Software Engineer",
    company: "Seer Medical",
    period: "Oct 2018 - March 2023"
  }
];
---

<section id="experience" class="px-6 py-12 md:py-20 max-w-[1200px] mx-auto">
  
  <div class="mb-20">
    <h2 class="text-4xl md:text-5xl font-display text-center mb-12 text-[#1e1515]">Skills</h2>
    <div class="flex flex-wrap justify-center gap-3 md:gap-4 max-w-5xl mx-auto">
      {skills.map(skill => (
        <span class="px-5 py-2.5 bg-[#1e1515] text-white rounded-lg text-base font-normal">
          {skill}
        </span>
      ))}
      <span class="px-5 py-2.5 text-gray-500 bg-gray-100 rounded-lg text-base font-normal">
        + More
      </span>
    </div>
  </div>

  <div>
    <h2 class="text-4xl md:text-5xl font-display text-center mb-12 text-[#1e1515]">Experience</h2>
    <div class="max-w-4xl mx-auto flex flex-col gap-8">
      {roles.map((role, index) => (
        <div class="flex flex-col md:flex-row md:items-center justify-between py-6 border-b border-gray-200 gap-2">
          <div class="md:w-1/3">
            <h3 class="text-2xl md:text-[28px] font-display text-[#1e1515]">{role.role}</h3>
          </div>
          <div class="md:w-1/3 md:text-center">
            <p class="text-xl text-gray-500 font-light">{role.company}</p>
          </div>
          <div class="md:w-1/3 md:text-right">
            <p class="text-base text-gray-400 font-light">{role.period}</p>
          </div>
        </div>
      ))}
    </div>
  </div>

</section>