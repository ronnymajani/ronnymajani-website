---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Process from '../components/Process.astro';
import TechStack from '../components/TechStack.astro';

const caseStudies = [
  {
    title: "Skuba - Dive Planning Reinvented",
    description: "Designed and built an all-in-one toolkit for recreational and technical divers, optimizing for real-world field use and cross-platform performance on iOS and Android.",
    stats: [
      { label: "Idea to Published", value: "2 months" },
      { label: "User Satisfaction", value: "4.5*" }
    ],
    image: "/images/skuba-app.jpeg",
    bgColor: "bg-[#dfefd7]"
  },
  {
    title: "Neoma Group - Supercritical CO₂ Extraction",
    description: "Set up and managed the launch of a new supercritical CO₂ extraction facility in Turkey. Built internal ERP and CRM tools to streamline production tracking, sales, and project coordination.",
    stats: [
      { label: "Operational Scope", value: "2 factories" },
      { label: "Systems Deployed", value: "ERP + CRM" }
    ],
    image: "/images/9pSrYTW6YIlStQLrSDAPCwI4WDU.jpg",
    bgColor: "bg-[#fae5d1]"
  },
  {
    title: "Fraim - Distributed Conversations Platform",
    description: "Led the end-to-end build of a distributed conversation aggregation and proactive chat system, from mobile to cloud. Designed for scalability and real-time performance.",
    stats: [
      { label: "Team", value: "7 people" },
      { label: "MVP Built In", value: "9 months" }
    ],
    image: "/images/yCjlpydFcllzpNAPxj3kEFHcGZA.jpg",
    bgColor: "bg-[#e7e0eb]"
  },
  {
    title: "Seer Sense - Wearable Epilepsy Diagnostic",
    description: "Architected and developed firmware for a portable EEG/ECG device capturing week-long clinical-grade data while maintaining ultra-low power consumption.",
    stats: [
      { label: "Patients Served", value: "1000+" },
      { label: "Battery Life", value: "7 days" }
    ],
    image: "/images/Ua4TDAWYzjS7lMNrmxlTl6ZcaDQ.jpg",
    bgColor: "bg-[#d1eafa]"
  },
  {
    title: "Seer Hub - Edge Gateway for Medical IoT",
    description: "Developed an edge gateway bridging wearables and cloud infrastructure, handling connectivity, preprocessing, and OTA updates to improve reliability and reduce cloud load.",
    stats: [
      { label: "Data Offload Time", value: "↓ 80%" },
      { label: "Cloud Cost", value: "↓ 25%" }
    ],
    image: "/images/cv8sTAnvfkCBpC91H180zXoGM.jpg",
    bgColor: "bg-[#fad1d1]"
  },
  {
    title: "Distributed Data Pipeline - Stream Orchestration",
    description: "Built a data-processing pipeline to handle unordered telemetry from IoT fleets, ensuring in-order aggregation, error resilience, and scalable throughput.",
    stats: [
      { label: "Fleet Size", value: "100+" },
      { label: "Architecture", value: "Microservice" }
    ],
    image: "/images/VqTxhJXVio3kjREdQWycvgH8bE8.jpg",
    bgColor: "bg-[#d1fae4]"
  }
];
---

<Layout title="Case Studies | Ronny Majani">
  <Header />
  
  <main class="pt-24 pb-12 md:pt-36 md:pb-20 px-6">
    <div class="max-w-[1200px] mx-auto">
      <h1 class="text-5xl md:text-7xl font-display text-[#1e1515] mb-8 md:mb-12 text-center">Case Studies</h1>
      <p class="text-xl text-gray-600 font-light text-center max-w-3xl mx-auto mb-12 leading-relaxed">
        A deeper dive into how I approach problems, architect systems, and ship products.
      </p>

      <div class="flex flex-col gap-12 md:gap-16">
        {caseStudies.map((study, index) => (
          <div class={`group relative ${study.bgColor} rounded-[32px] overflow-hidden transition-transform hover:scale-[1.01] duration-500`}>
            <div class="flex flex-col md:flex-row h-full">
              <div class="p-8 md:p-12 md:w-1/2 flex flex-col justify-between order-2 md:order-1 min-h-[400px]">
                <div>
                  <h3 class="text-2xl md:text-3xl font-display font-medium text-[#1e1515] mb-4">
                    {study.title}
                  </h3>
                  <p class="text-lg text-gray-700 leading-relaxed font-light">
                    {study.description}
                  </p>
                </div>
                
                <div class="flex gap-12 mt-12 pt-12 border-t border-black/10">
                  {study.stats.map(stat => (
                    <div>
                      <p class="text-sm text-gray-500 mb-1">{stat.label}</p>
                      <p class="text-xl font-medium text-[#1e1515]">{stat.value}</p>
                    </div>
                  ))}
                </div>
              </div>
              <div class="md:w-1/2 order-1 md:order-2 h-[300px] md:h-auto relative overflow-hidden">
                 <img 
                  src={study.image} 
                  alt={study.title} 
                  class="absolute inset-0 w-full h-full object-cover object-left"
                />
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>

  <Process />
  <TechStack />

  <Footer />
</Layout>